<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Query</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- jQuery (required for Select2) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 80vw;
      max-height:1200px;
      margin-top: 70px !important;
    }
    .card-header {
      background-color: #007bff;
      color: white;
    }
    .form-control, .form-select {
      border-radius: 0.375rem;
    }
    #homebtn{
      position: relative;
      top: 30px;
      left: 20px;
    }
    #formdetail{
      background-color: rgba(49, 43, 43, 0.059);
    }

  </style>
</head>
<body>
  <a href="/purchase_dashboard">
    <button class="btn btn-primary m-3" id="homebtn">
      <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
    </button>
  </a>
<div class="container">
  <div class="card shadow">
    <div class="card-header text-center">
      <h4>Purchase Query Details</h4>
    </div>
    <div class="card-body">
      <form action="/purchase_query" method="POST">
        <div class="row mb-3">
          <!-- Customer Name Dropdown -->
          <div class="col-md-6">
            <label for="customerName" class="form-label">Customer Name</label>
            <select class="form-select" id="customerName" name="customername" required>
              <option value="" selected disabled>Select Customer</option>
             <%customer.forEach(cust=>{ %>
              <option value="<%=cust.name%>"><%=cust.name%></option><%})%></select>
            
              <!-- Add more customers dynamically if needed -->
          </div>

          <!-- Type of Work Dropdown -->
          <div class="col-md-6">
            <label for="workType" class="form-label">Application Type</label>
            <select class="form-select" id="workType" name="worktype" required>
              <option value="" selected disabled>Select Application Type</option>
           <%  apptype.forEach(at=>{ %>
            <option value="<%= at.application_type %>"><%= at.application_type %>
      </option>
       <%})%>
              <!-- Add more work types dynamically if needed -->
            </select>
          </div>
        </div>


        <div class="row mb-3">
          <div class="col-md-6">
          <label for="workType" class="form-label">Choose Form </label>
          <select class="form-select select2" id="subwork" name="subwork" required>
            <option value="" selected disabled>Choose Form Details</option>
  <% formname.forEach(fname => { %>
    <option value="<%= fname.form_name %>"><%= fname.form_name %></option>
    <% }) %>
            <!-- Add more work types dynamically if needed -->
          </select>
          <button type="button" class="bg-warning mt-1" onclick="formDetails()">Get Details</button>
        </div>
      

          <div class="col-md-6">
            <label for="form details" class="form-label">Form Details</label>
            <textarea rows="2"class="form-control" id="formdetail" readonly ></textarea>        
        </div>
        </div>




        <div class="row mb-3 mt-3">
          <!-- Date of Query -->
          <div class="col-md-6">
            <label for="queryDate" class="form-label">Date of Query</label>
            <input type="date" class="form-control" id="queryDate" name="querydate" required>
          </div>

          <!-- Assigned To Dropdown -->
          <div class="col-md-6">
            <label for="assignedTo" class="form-label">Assigned To</label>
            <select class="form-select select2" id="assignedTo" name="assignedto" required>
              <option value="" selected disabled>Select Employee</option>
             <% employee.forEach(empl => { %>
                <option value="<%=empl.name %>"><%=empl.name%></option>  <% }) %>
            </select>
          </div>
        </div>

        <div class="row mb-3">
          <!-- Quotation No -->
          <div class="col-md-6">
            <label for="quotationNo" class="form-label">Quotation No</label>
            <input type="text" class="form-control" id="quotationNo" name="quotationno" >
          </div>

          <!-- Date of Quotation Sent -->
          <div class="col-md-6">
            <label for="quotationDate" class="form-label">Date of Quotation Sent</label>
            <input type="text" class="form-control" id="quotationDate" name="quotationdate">
          </div>
        </div>

        <div class="text-center">
          <button type="submit"  class="btn btn-primary btn-lg">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
//   function filterForms(){
// const worktype=document.getElementById("workType").value;
// window.location.href = `/purchase_query?worktype=${encodeURIComponent(workType)}`;
//   } -->
  $(document).ready(function() {
    $('.select2').select2();
  });

  async function formDetails(){
    const subworkvalue=document.getElementById("subwork").value;
    const response = await fetch('/purchase_query', {
        method: 'POST', // HTTP method
        headers: {
          'Content-Type': 'application/json', // Specify content type as JSON
        },
        body: JSON.stringify({
          subworkvalue// Send the selected form name
        })
      });  
      const data = await response.json();

// Handle the response data here (e.g., update UI, populate form details)
console.log('Response:', data);

// Update form details in the textarea
document.getElementById('formdetail').value= data.form_details || "No details found";    
    }

</script>
</body>
</html>
