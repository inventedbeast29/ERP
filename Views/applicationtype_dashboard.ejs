<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Application Type List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4 text-center">List Of Application Type Details</h2>

    <!-- Buttons outside the form -->
    <div class="d-flex justify-content-between mb-4">
      <a href="/main" class="btn btn-secondary">
        <i class="bi bi-house-door"></i> Back to Home
      </a>
      <a href="/add_license" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
      </a>
    </div>

    <!-- Displaying Submitted Applications -->
    <div class="card shadow-sm">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0">List Of Application Type</h5>
      </div>
      <div class="card-body p-2">
        <table class="table table-bordered table-hover mb-0">
          <thead class="table-light text-center">
            <tr>
              <th>S.No</th>
              <th>Application Type</th>
              <th>Form Name</th>
              <th>Details of Application</th>
            </tr>
          </thead>
          <tbody id="applicationTableBody" class="text-center">
            <!-- JS will populate rows here -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    const api = "/api/applicationtype_dashboard"; // Your API endpoint

    document.addEventListener("DOMContentLoaded", async function () {
      try {
        const response = await fetch(api); // Fetch data from the API
        const result = await response.json(); // Parse the JSON response

        const tbody = document.getElementById("applicationTableBody");

        // Iterate over the result and populate the table rows dynamically
        result.forEach((app, index) => {
          const row = document.createElement("tr");
          row.innerHTML = `
            <td>${index + 1}</td>
            <td>${app.application_type}</td>
            <td>${app.form_name}</td>
            <td>${app.application_details}</td>
          `;
          tbody.appendChild(row); // Append the row to the table body
        });
      } catch (error) {
        console.error("Error fetching application data:", error); // Handle errors if any
      }
    });
  </script>
</body>
</html>
