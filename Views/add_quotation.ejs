<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotation Page</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
   
    <script>
      $(document).ready(function() {
          $('.select2').select2();
      });
    </script>
</head>
<style>
  #amount {
    background-color: rgba(18, 19, 19, 0.071);
  }

  /* Border for the container */
  .border-container {
    border: 2px solid #ccc;
    padding: 20px;
    border-radius: 8px;
  }
  #quotationNo{
    position:relative;
    left: 30%;
  }

  /* Additional border for the form fields */
  .form-control {
    border-radius: 4px;
  }

</style>
<body>
  <a href="/quotation_dashboard" class="btn btn-secondary">Back to Dashboard</a>
    <div class="container my-4 border-container">
        <div class="d-flex justify-content-center mb-4">
            <!-- Back to Dashboard Button -->
            <h1 class="text-center">Quotation</h1>
        </div>
        
        <!-- Quotation Details Form -->
        <form action="/submit-quotation" method="POST">
            
            <!-- Customer Details Row -->
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="customerName" class="form-label">Customer Name</label>
                <select id="customerName" name="customerName" class="form-select select2" required>
                  <option value="">Select Customer</option>
                  <% customers.forEach(function(customer) { %>
                    <option value="<%= customer.name %>"><%= customer.name %></option>
                  <% }); %>
                </select>
              </div>
            </div>
            

            <!-- Valid Till Date Row -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="quotationDate" class="form-label">Quotation Date</label>
                    <input type="date" id="quotationDate" name="quotationDate" class="form-control" required>
                </div>
                <div class="col-md-3">
                  <label for="quotationNo" id="quotationNo" class="form-label">Quotation No</label>
                  <input type="text" id="quotationNo" name="quotationNo" class="form-control" required>
                </div>
            </div>

            <h2 class="mt-4">Item Details</h2>
            
            <!-- Item Details Row -->
            <div class="row mb-3">
                <div class="col-md-2">
                    <label for="itemDescription" class="form-label">Item Description</label>
                    <select id="itemName" name="itemName[]" class="form-select select2" required>
                      <option value="" >Select Form Name</option>
                      <% form_name.forEach(function(item) { %>
                        <option value="<%= item.form_name%>"><%= item.form_name %></option>
                      <% }); %>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" id="quantity" name="quantity[]" class="form-control" required>
                </div>
                <div class="col-md-2">
                    <label for="unitPrice" class="form-label">Unit Price</label>
                    <input type="number" step="0.01" id="unitPrice" name="unitPrice[]" class="form-control" required>
                </div>
                <div class="col-md-2">
                    <label for="discount" class="form-label">Discount Amount</label>
                    <input type="number" step="0.01" id="discount" name="discount[]" class="form-control" value="0">
                </div>
                <div class="col-md-2">
                    <label for="tax" class="form-label">Total Tax Amount</label>
                    <input type="number" id="tax" name="tax[]" class="form-control" value="0">
                </div>
                <div class="col-md-2">
                <label class="form-label">Total Amount</label>
                <div class="d-flex align-items-center">
                    <input type="number" name="amount[]" class="form-control" value="0" required readonly>
                    <button type="button" class="btn btn-danger btn-sm ms-2 removeItemBtn">X</button>
                </div>
            </div>
            <div class="mb-3">
              <button type="button" class="btn btn-success" id="addItemBtn">+ Add Item</button>
          </div>

            <!-- Payment Terms and Conditions Row -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="paymentTerms" class="form-label">Payment Terms</label>
                    <textarea id="paymentTerms" name="paymentTerms" class="form-control" required></textarea>
                </div>
                <div class="col-md-6">
                    <label for="termsConditions" class="form-label">Terms & Conditions</label>
                    <textarea id="termsConditions" name="termsConditions" class="form-control" required></textarea>
                </div>
            </div>

            <!-- Remarks Row -->
            <div class="mb-3">
                <label for="remarks" class="form-label">Remarks/Notes</label>
                <textarea id="remarks" name="remarks" class="form-control"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Submit Quotation</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
