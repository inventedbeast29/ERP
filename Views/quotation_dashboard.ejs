<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotation Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fa;
        }
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Back to Home Button -->
            <a href="/main" class="btn btn-secondary">
                <i class="bi bi-house-door-fill"></i>Back To Home
            </a>
            <h1 class="text-center flex-grow-1">Quotation Dashboard</h1>
            <!-- Create Quotation Button -->
            <a href="/add_quotation" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Quotation
            </a>
        </div>

        <!-- Quotation Table -->
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>S.No</th>
                    <th>Quotation No</th>
                    <th>Customer Name</th>
                    <th>Total Quantity</th>
                    <th>Total Amount</th>
                    <th>Quotation Date <br>(YY/MM/DD)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (quotations && quotations.length > 0) { %>
                    <% quotations.forEach(function(quotation,index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= quotation.quotation_no %></td>
                            <td><%= quotation.cust_name %></td>
                            <td><%= quotation.total_qty %></td>
                            <td><%= quotation.total_amt %></td>
                            <td><%= quotation.qtn_date.toISOString().slice(0, 10) %></td>
                            <td>
                                <% if (quotation.sts === 'Approved') { %>
                                    <span class="badge bg-success">Approved</span>
                                <% } else if (quotation.sts === 'Pending') { %>
                                    <span class="badge bg-warning">Pending</span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= quotation.sts %></span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/view-quotation/<%= quotation.quotationNo %>" class="btn btn-primary btn-sm mb-1">
                                    <i class="bi bi-eye-fill"></i>
                                  </a>
                                <a href="/edit-quotation/<%= quotation.quotationNo %>" class="btn btn-warning btn-sm mb-1">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <form action="/delete-quotation/<%= quotation.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this quotation?');" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8" class="text-center">No quotations found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
