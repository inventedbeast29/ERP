<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotation Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
 <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    
  <!-- DataTables -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css">
  
  <!-- jQuery + DataTables -->
  <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        #filterbutton{
      display: flex;
      justify-content: end;
    }
    .dt-buttons button{
      background-color: blue;
      color: white;
      border-radius: 10px;
      right: 10px;
      top: 5px;
    }
    .dt-buttons button:hover{
      background-color: rgba(1, 1, 246, 0.618) !important;
    }
   #quotationtable thead tr th{
        text-align:   center !important;
    }
    </style>
</head>
<body>
    <div class="button" id="filterbutton"></div>
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Back to Home Button -->
            <a href="/main" class="btn btn-secondary">
                <i class="bi bi-house-door-fill"></i>Back To Home
            </a>
            <h1 class="text-center flex-grow-1">Quotation Dashboard</h1>
            <!-- Create Quotation Button -->
            <a href="/add_quotation" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Quotation
            </a>
        </div>

        <!-- Quotation Table -->
        <table class="table table-bordered table-hover table-striped" id="quotationtable">
            <thead class="table-dark">
                <tr>
                    <th>Quotation No</th>
                    <th>Customer Name</th>
                    <th>Total Quantity</th>
                    <th>Total Amount</th>
                    <th>Created Date <br>(DD/MM/YYYY)</th>
                    <th>Status</th>
                    <th>Accepted/Rejected Date</th>
                    <th>Updated By</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (quotations && quotations.length > 0) { %>
                    <% quotations.forEach(function(quotation,index) { %>
                        <tr>
                            <td><%= quotation.quotation_no %></td>
                            <td><%= quotation.cust_name %></td>
                            <td><%= quotation.total_qty %></td>
                            <td><%= quotation.total_amt %></td>
                            <td><%=new Date(quotation.qtn_date).toLocaleDateString('en-GB')%></td>
                            <td>
                                <% if (quotation.quotation_sts === 'Accepted') { %>
                                    <span class="badge bg-success">Accepted</span>

                                <% } else if (quotation.quotation_sts === 'Rejected') { %>
                                    <span class="badge bg-danger">Rejected</span>
                                <% } else if(quotation.quotation_sts==="Pending"){ %>
                                    <span class="badge bg-warning">Pending</span>
                                <% }
                                else{ %>
                                    <span class="badge bg-dark text-light"><%= quotation.quotation_sts %></span>
                               <% } %>
                               <td><%=quotation.acc_rej_date?new Date(quotation.acc_rej_date).toLocaleDateString('en-GB'):""%></td>
                               <td><%=quotation.updated_by%></td>
                               <td><%=new Date(quotation.last_updated).toLocaleDateString('en-GB')%></td>
                            </td>
                            <td>
                                <a href="/view-quotation/<%= quotation.id %>?qno=<%=quotation.quotation_no %>" class="btn btn-primary btn-sm mb-1">
                                    <i class="bi bi-eye-fill"></i>
                                  </a>
                                 <% if(quotation.quotation_sts!=="Accepted"  && quotation.quotation_sts !== "Rejected"){ %>
                                <a href="/edit-quotation/<%= quotation.id%>?qno=<%=quotation.quotation_no%>" class="btn btn-warning btn-sm mb-1">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            <%}%>
                                <form action="/delete-quotation/<%= quotation.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this quotation?');" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8" class="text-center">No quotations found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        try{
     const table = $('#quotationtable').DataTable({
        ordering: false,
        dom: '<"top"Bf>rt<"bottom"p><"clear">',
        buttons: ['csv', 'excel', 'pdf', 'print']
      });

      // Append buttons nicely
      table.buttons().container().appendTo('#filterbutton');}

    catch (err) {
      console.error('Error loading customer data:', err);
      tbody.innerHTML = `<tr><td colspan="9" class="text-danger">Failed to load customers.</td></tr>`;
    }
        </script>
</body>
</html>
