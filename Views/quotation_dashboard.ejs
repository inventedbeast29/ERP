<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotation Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-4">
        <h1 class="text-center mb-4">Quotation Dashboard</h1>
        
        <!-- Button to Create New Quotation -->
        <div class="mb-4 text-end">
            <a href="/quotation-form" class="btn btn-success">Create New Quotation</a>
        </div>

        <!-- Quotation Table -->
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>S.No<th>
                    <th>Quotation No</th>
                    <th>Customer Name</th>
                    <th>Quotation Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (quotations && quotations.length > 0) { %>
                    <% quotations.forEach(function(quotation) { %>
                        <tr>
                            <td>${index+1}</td>
                            <td><%= quotation.quotationNo %></td>
                            <td><%= quotation.customerName %></td>
                            <td><%= quotation.quotationDate %></td>
                            <td>
                                <% if (quotation.status === 'Approved') { %>
                                    <span class="badge bg-success">Approved</span>
                                <% } else if (quotation.status === 'Pending') { %>
                                    <span class="badge bg-warning">Pending</span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= quotation.status %></span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/view-quotation/<%= quotation.quotationNo %>" class="btn btn-primary btn-sm">View</a>
                                <a href="/edit-quotation/<%= quotation.quotationNo %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/delete-quotation/<%= quotation.quotationNo %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">No quotations found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
