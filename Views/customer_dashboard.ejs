<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Customer Dashboard</title>
  
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <!-- DataTables -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css">
  
  <!-- jQuery + DataTables -->
  <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
    }

    h2 {
      font-weight: bold;
      color: #333;
    }

    .table-primary th {
      text-align: center !important;
      background-color: #0d6efd !important;
      color: white;
    }

    #customer tr {
      border-bottom: 1px solid #dee2e6 !important;
    }

    #customer tbody tr:hover {
      background-color: #e9f5ff !important;
    }

    .dt-button {
      background-color: #0d6efd !important; /* Bootstrap Primary Blue */
      color: white !important;
      border: none !important;
      padding: 6px 12px !important;
      border-radius: 5px !important;
      margin-right: 8px !important;
      font-size: 14px !important;
    }

    .dt-button:hover {
      background-color: #0b5ed7 !important;
      color: white !important;
    }

    #filterbutton {
      display: flex;
      justify-content: end;
      margin: 20px 0;
    }

    /* Responsive tweak */
    @media (max-width: 768px) {
      .d-flex.justify-content-between {
        flex-direction: column;
        gap: 10px;
      }
      #filterbutton {
        justify-content: center;
        flex-wrap: wrap;
      }
    }
  </style>
</head>

<body>

<div class="container mt-4">

  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <a href="/main" class="btn btn-success">
      <i class="bi bi-house-door-fill"></i> Home
    </a>
    <h2 class="mb-0">Customer Dashboard</h2>
    <a href="/add-customer" class="btn btn-success">
      <i class="bi bi-person-plus"></i> Add Customer
    </a>
  </div>

  <!-- Filter Buttons -->
  <div id="filterbutton"></div>

  <!-- Customer Table -->
  <div class="table-responsive shadow-sm rounded bg-white p-3">
    <table class="table table-bordered table-hover align-middle text-center" id="customer">
      <thead class="table-primary">
        <tr>
          <th>S.No</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Address</th>
          <th>PAN No</th>
          <th>Aadhaar No</th>
          <th>Assigned To</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="customer-body">
        <tr>
          <td colspan="9">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', async function () {
    const tbody = document.getElementById('customer-body');
    try {
      const res = await fetch('/api/customer_dashboard');
      const customer = await res.json();

      if (customer.length === 0) {
        tbody.innerHTML = `<tr><td colspan="9">No customers found.</td></tr>`;
        return;
      }

      tbody.innerHTML = '';
      customer.forEach((cust, index) => {
        const row = `
          <tr>
            <td>${index + 1}</td>
            <td>${cust.name}</td>
            <td>${cust.phone}</td>
            <td>${cust.email}</td>
            <td>${cust.address}</td>
            <td>${cust.pan}</td>
            <td>${cust.aadhar}</td>
            <td>${cust.Assigned}</td>
            <td>
              <a href="/customers/${cust.id}/edit" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i></a>
              <form action="/customers_del/${cust.id}" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this customer?')">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        `;
        tbody.insertAdjacentHTML('beforeend', row);
      });

      // Initialize DataTable
      const table = $('#customer').DataTable({
        ordering: false,
        dom: '<"top"Bf>rt<"bottom"p><"clear">',
        buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
      });

      // Append buttons nicely
      table.buttons().container().appendTo('#filterbutton');

    } catch (err) {
      console.error('Error loading customer data:', err);
      tbody.innerHTML = `<tr><td colspan="9" class="text-danger">Failed to load customers.</td></tr>`;
    }
  });
</script>

</body>
</html>
