<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Customer Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <a href="/main" class="btn btn-success">
        <i class="bi bi-house-door-fill"></i> Back to Home Page
      </a>
      <h2 class="mb-0">Customer Dashboard</h2>
      <a href="/add-customer" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Add New Customer
      </a>
    </div>

    <!-- Customer Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-primary">
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>PAN No</th>
            <th>Aadhaar No</th>
            <th>Assigned To (Employee)</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="customer-body">
          <tr>
            <td colspan="9">Loading...</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', async function () {
      const tbody = document.getElementById('customer-body');
      try {
        const res = await fetch('/api/customer_dashboard');
        const customer = await res.json();

        if (customer.length === 0) {
          tbody.innerHTML = `<tr><td colspan="9">No customers found.</td></tr>`;
          return;
        }

        tbody.innerHTML = '';
        customer.forEach((cust, index) => {
          const row = `
            <tr>
              <td>${index + 1}</td>
              <td>${cust.name}</td>
              <td>${cust.phone}</td>
              <td>${cust.email}</td>
              <td>${cust.address}</td>
              <td>${cust.pan}</td>
              <td>${cust.aadhaar}</td>
              <td>${cust.Assigned}</td>
              <td>
                <a href="/customers/${cust.id}/edit" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i></a>
                <form action="/customers_del/${cust.id}" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
          `;
          tbody.insertAdjacentHTML('beforeend', row);
        });
      } catch (err) {
        console.error('Error loading customer data:', err);
        tbody.innerHTML = `<tr><td colspan="9" class="text-danger">Failed to load customers.</td></tr>`;
      }
    });
  </script>
</body>
</html>
