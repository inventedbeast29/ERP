<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Customer Query Form</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-lg rounded-4">
      <div class="card-header bg-success text-white text-center">
        <h4>Customer Query Form</h4>
      </div>
      <div class="card-body">
        <form action="/submit-customer" method="POST">
          <div class="row">
            <!-- Customer Name (Dropdown) -->
            <div class="col-md-6 mb-3">
              <label for="customerName" class="form-label">Customer Name</label>
              <select class="form-select" id="customerName" name="customerName" required>
                <option value="">Select Customer</option>
                <option value="Ravi Kumar">Ravi Kumar</option>
                <option value="Priya Sharma">Priya Sharma</option>
                <option value="Aman Verma">Aman Verma</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- Phone -->
            <div class="col-md-6 mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>

            <!-- Email -->
            <div class="col-md-6 mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>

            <!-- Query Date -->
            <div class="col-md-6 mb-3">
              <label for="queryDate" class="form-label">Query Date</label>
              <input type="date" class="form-control" id="queryDate" name="queryDate" required>
            </div>

            <!-- Address -->
            <div class="col-12 mb-3">
              <label for="address" class="form-label">Address</label>
              <textarea class="form-control" id="address" name="address" rows="2" required></textarea>
            </div>

            <!-- Assigned To (Dropdown) -->
            <div class="col-md-6 mb-3">
              <label for="assignedTo" class="form-label">Assigned To</label>
              <select class="form-select" id="assignedTo" name="assignedTo">
                <option value="">Select Employee</option>
                <option value="Rahul Singh">Rahul Singh</option>
                <option value="Nikita Joshi">Nikita Joshi</option>
                <option value="Suresh Patel">Suresh Patel</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- Type of Work -->
            <div class="col-md-6 mb-3">
              <label for="typeOfWork" class="form-label">Type of Work</label>
              <select class="form-select" id="typeOfWork" name="typeOfWork" required>
                <option value="">Select</option>
                <option value="Installation">Installation</option>
                <option value="Maintenance">Maintenance</option>
                <option value="Repair">Repair</option>
                <option value="Consultation">Consultation</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- PAN Number -->
            <div class="col-md-6 mb-3">
              <label for="panNumber" class="form-label">PAN Number</label>
              <input type="text" class="form-control" id="panNumber" name="panNumber">
            </div>

            <!-- Aadhaar Number -->
            <div class="col-md-6 mb-3">
              <label for="aadhaarNumber" class="form-label">Aadhaar Number</label>
              <input type="text" class="form-control" id="aadhaarNumber" name="aadhaarNumber">
            </div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid mt-3">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>

        </form>
      </div>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
