<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Purchase Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    #pbtn {
        position: absolute;
        right: 20px;
    }

    #backbtn {
        position: absolute;
        left: 20px;
    }

    .dashboard-container {
        margin-top: 50px;
    }

    .table th, .table td {
        text-align: center;
    }
  </style>
</head>
<body>

  <!-- Back to Dashboard Button -->
 
  <a href="/main" class="btn btn-success"id="backbtn">
    <i class="bi bi-house-door-fill"></i> Back to Home Page
  </a>

  <!-- Add Purchase Query Button -->
  <a href="/purchase_query">
    <button class="btn btn-success m-3" id="pbtn">
      <i class="bi bi-person-plus"></i> Add Purchase Query
    </button>
  </a>

  <div class="container dashboard-container">
    <h2 class="mb-4 text-center">Purchase Queries Dashboard</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-warning">
        <tr>
          <th>S.No</th>
          <th>Customer</th>
          <th>Application Type</th>
          <th>Form Name</th>
          <th>Query Date <br>(dd/mm/yyyy)</br></th>
          <th>Assigned To</th>
          <th>Quotation No</th>
          <th>Quotation Sent Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="dashboard-body">
        <!-- Dynamic rows will be inserted here -->
      </tbody>
    </table>
  </div>

  <script>
    async function loadPurchaseQueries() {
      try {
        const res = await fetch('/api/purchase_dashboard');
        const data = await res.json();
  
        const tbody = document.getElementById('dashboard-body');
        tbody.innerHTML = ""; // Clear previous rows
  
        data.forEach((query, index) => {
          const queryDate = new Date(query.query_date).toLocaleDateString('en-GB');
          const quotationDate = new Date(query.quotation_sent).toLocaleDateString('en-GB');
  
          const row = document.createElement('tr');
  
          row.innerHTML = `
            <td>${index + 1}</td>
            <td>${query.customer_name}</td>
            <td>${query.work_type}</td>
            <td>${query.sub_work}</td>
            <td>${queryDate}</td>
            <td>${query.assigned_to}</td>
            <td>${query.quotation_no}</td>
            <td>${quotationDate}</td>
            <td>
              <a href="puchase/edit/${query.id}" class="btn btn-sm btn-warning">Edit</a>
              <form action="purchase/delete/${query.id}" method="POST" class="d-inline" onsubmit="return confirm('Delete this Purchase query?');">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          `;
          tbody.appendChild(row);
        });
      } catch (err) {
        console.error('Error loading dashboard:', err);
      }
    }
  
    document.addEventListener('DOMContentLoaded', loadPurchaseQueries);
  </script>
</body>
</html>
